---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getEntry, render } from 'astro:content';

export const prerender = true;

const colophonEntry = await getEntry('pages', 'colophon');
if (!colophonEntry) {
  throw new Error('Colophon page not found');
}

const colophon = colophonEntry;
const { Content } = await render(colophon);
---

<BaseLayout
  title={`${colophon.data.title} - Pablo Kvitca`}
  description={colophon.data.description}
>
  <div class="max-w-4xl mx-auto">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>
  </div>
</BaseLayout>
