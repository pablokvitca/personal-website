---
import ProjectCard from './ProjectCard.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  projects: CollectionEntry<'projects'>[];
  showEmpty?: boolean;
  columns?: '1' | '3';
}

const { projects, showEmpty = true, columns = '3' } = Astro.props;

const gridClass = columns === '1' ? 'grid grid-cols-1 gap-6' : 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6';
---

{
  projects.length > 0 ? (
    <div class={gridClass}>
      {projects.map((project, index) => (
        <ProjectCard project={project} index={index} />
      ))}
    </div>
  ) : showEmpty ? (
    <p class="text-muted-foreground text-center py-12">
      No projects found.
    </p>
  ) : null
}
