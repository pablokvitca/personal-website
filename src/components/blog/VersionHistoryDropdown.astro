---
import { formatDate } from '@/lib/blog';

interface VersionSnapshot {
  url: string;
  date: Date;
}

interface Props {
  currentVersion: number;
  totalVersions: number;
  snapshots: VersionSnapshot[];
  slug: string;
}

const { currentVersion, totalVersions, snapshots, slug } = Astro.props;
---

<span class="version-history-container">
  <button type="button" class="version-button">
    Version {currentVersion}/{totalVersions}
  </button>

  <div class="version-dropdown">
    <div class="version-dropdown-content">
      <a href={`/blog/${slug}`} class="version-item">
        <div class="version-label">Current version</div>
        <div class="version-date">Live</div>
      </a>
      <div class="version-divider"></div>
      {snapshots.map((snapshot, index) => (
        <>
          <a href={snapshot.url} class="version-item">
            <div class="version-label">Version {totalVersions - index - 1}</div>
            <div class="version-date">{formatDate(snapshot.date)}</div>
          </a>
          {index < snapshots.length - 1 && <div class="version-divider"></div>}
        </>
      ))}
    </div>
  </div>
</span>

<style>
  .version-history-container {
    position: relative;
    display: inline-block;
  }

  .version-button {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    text-decoration: underline;
    text-decoration-style: dotted;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
    font: inherit;
    transition: color 0.2s;
  }

  .version-button:hover {
    color: hsl(var(--primary));
  }

  .version-dropdown {
    position: absolute;
    left: 0;
    top: calc(100% + 0.25rem);
    z-index: 50;
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.2s ease-out, visibility 0.2s ease-out;
  }

  /* Create an invisible bridge between button and dropdown */
  .version-dropdown::before {
    content: '';
    position: absolute;
    top: -0.25rem;
    left: 0;
    right: 0;
    height: 0.25rem;
  }

  .version-history-container:hover .version-dropdown {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .version-dropdown-content {
    border-radius: 0.375rem;
    border: 1px solid hsl(var(--border));
    background-color: white;
    padding: 0.5rem;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -4px rgb(0 0 0 / 0.2);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  /* Dark mode background */
  :global(.dark) .version-dropdown-content {
    background-color: rgb(10, 10, 10);
  }

  .version-item {
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s;
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .version-item:hover {
    background-color: hsl(var(--accent));
  }

  .version-label {
    font-weight: 500;
  }

  .version-date {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
  }

  .version-divider {
    border-top: 2px solid hsl(var(--border));
    margin: 0.375rem 0;
    opacity: 0.5;
  }
</style>
