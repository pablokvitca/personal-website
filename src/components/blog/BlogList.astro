---
import BlogCard from './BlogCard.astro';
import type { BlogPost } from '@/lib/blog';

interface Props {
  posts: BlogPost[];
  showEmpty?: boolean;
}

const { posts, showEmpty = true } = Astro.props;
---

{
  posts.length > 0 ? (
    <div class="grid gap-6 md:grid-cols-2">
      {posts.map((post) => (
        <BlogCard post={post} />
      ))}
    </div>
  ) : showEmpty ? (
    <p class="text-muted-foreground text-center py-12">
      No blog posts found.
    </p>
  ) : null
}
