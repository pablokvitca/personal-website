---
import BlogCard from './BlogCard.astro';
import type { BlogPost } from '@/lib/blog';

interface Props {
  posts: BlogPost[];
  showEmpty?: boolean;
  columns?: '1' | '3';
}

const { posts, showEmpty = true, columns = '3' } = Astro.props;

const gridClass = columns === '1' ? 'grid grid-cols-1 gap-6' : 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6';
---

{
  posts.length > 0 ? (
    <div class={gridClass}>
      {posts.map((post, index) => (
        <BlogCard post={post} index={index} />
      ))}
    </div>
  ) : showEmpty ? (
    <p class="text-muted-foreground text-center py-12">
      No blog posts found.
    </p>
  ) : null
}
